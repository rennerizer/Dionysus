            "program": "${workspaceFolder}/hello.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "name": "Launch Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "file:///D:/SourceCode/RennerizerGitHub/dionysus/master/01basics/node-and-vscode/index.html",
            "runtimeArgs": [
                "--new-window",
                "--remote-debugging-port=9222"
